{
  "name": "muvidgen",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rimraf dist-electron dist",
    "build:electron": "npm run clean && tsc -p tsconfig.electron.json",
    "build:client": "cd client && npm run build",
    "build": "npm run build:electron && npm run build:client",
    "watch:electron": "tsc -p tsconfig.electron.json --watch",
    "start:electron": "electron ./dist-electron/electron/main.js",
    "electron": "npm run build && npm run start:electron",
    "dev": "npm run build && npm run start:electron"
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  }
}
