import { useCallback, useEffect, useMemo, useState } from 'react';
import {
  exportSession,
  loadSessionState,
  saveSessionState,
  openAudioFile,
  openVideoFiles,
  chooseProjectSavePath,
  startRender,
  cancelRender,
  onRenderLog,
  onRenderProgress,
  onRenderDone,
  onRenderError,
  onRenderCancelled,
  openProject,
  updateProjectDirty,
  onProjectRequestSave,
  notifyProjectSaved,
} from './state/storage';
import type { SessionState } from './types/session';
import type { ProjectSchema } from 'common/project';
import Waveform from './components/Waveform';
import Storyboard from './components/Storyboard';

type LocalSession = SessionState & {
  audioPath?: string;
  videoPaths?: string[];
  projectSavePath?: string;
  playhead?: number;
};

const defaultState: LocalSession = { notes: '' };

const App = () => {
  const [session, setSession] = useState<LocalSession>(defaultState);
  const [status, setStatus] = useState<string>('');
  const [error, setError] = useState<string | null>(null);
  const [logs, setLogs] = useState<string[]>([]);
  const [renderElapsedMs, setRenderElapsedMs] = useState<number>(0);
  const [renderTotalMs, setRenderTotalMs] = useState<number>(0);
  const [isRendering, setIsRendering] = useState<boolean>(false);
  const [lastSavedSnapshot, setLastSavedSnapshot] = useState<string>('');

  useEffect(() => {
    let cancelled = false;

    loadSessionState()
      .then((state) => {
        if (!cancelled && state) {
          setSession(state);
        }
      })
      .catch((err: unknown) => {
        if (!cancelled) {
          setError(err instanceof Error ? err.message : String(err));
        }
      });

    return () => {
      cancelled = true;
    };
  }, []);

  const handleNotesChange = useCallback<React.ChangeEventHandler<HTMLTextAreaElement>>(
    (event) => {
      const value = event.target.value;
      setSession((prev: LocalSession) => ({ ...prev, notes: value }));
    },
    [],
  );

  const handleSave = useCallback(async () => {
    setStatus('Saving...');
    setError(null);

    try {
      await saveSessionState(session);
      setStatus('Session saved.');
    } catch (err: unknown) {
      setStatus('');
      setError(err instanceof Error ? err.message : String(err));
    }
  }, [session]);

  const handleBrowseAudio = useCallback(async () => {
    setError(null);
    try {
      const selected = await openAudioFile();
      if (selected) {
        setSession((prev) => ({ ...prev, audioPath: selected }));
        setStatus(`Selected audio: ${selected}`);
      }
    } catch (err: unknown) {
      setStatus('');
      setError(err instanceof Error ? err.message : String(err));
    }
  }, []);

  useEffect(() => {
    // Subscribe to render events
    const unsubs: Array<() => void> = [];
    try {
      unsubs.push(onRenderLog((line) => setLogs((prev) => [...prev, line].slice(-500))));
      unsubs.push(onRenderProgress((d) => {
        if (typeof d.totalMs === 'number') setRenderTotalMs(d.totalMs);
        if (typeof d.outTimeMs === 'number') setRenderElapsedMs(d.outTimeMs);
      }));
      unsubs.push(onRenderDone(() => { setIsRendering(false); setStatus('Render complete.'); }));
      unsubs.push(onRenderError((msg) => { setIsRendering(false); setError(msg); }));
      unsubs.push(onRenderCancelled(() => { setIsRendering(false); setStatus('Render cancelled.'); }));
      // Save request from main on window close
      unsubs.push(onProjectRequestSave(async () => {
        try {
          let target = session.projectSavePath;
          if (!target) {
            target = await chooseProjectSavePath(undefined);
          }
          if (!target) {
            notifyProjectSaved(false);
            return;
          }
          setSession((prev) => ({ ...prev, projectSavePath: target! }));
          // Build a minimal project snapshot from current session
          const snapshotObj = {
            version: '1.0',
            audio: session.audioPath ? { path: session.audioPath } : null,
            playhead: typeof session.playhead === 'number' ? session.playhead : 0,
            clips: (session.videoPaths ?? []).map((p, index) => ({ path: p, index })),
            output: target ? { path: target } : undefined,
            metadata: {},
          } as ProjectSchema;
          await exportSession({ targetPath: target!, state: snapshotObj as unknown as SessionState });
          setLastSavedSnapshot(JSON.stringify(snapshotObj));
          await updateProjectDirty(false);
          notifyProjectSaved(true);
          setStatus(`Project saved: ${target}`);
        } catch (err) {
          notifyProjectSaved(false);
          setError(err instanceof Error ? err.message : String(err));
        }
      }));
    } catch {
      // In non-electron preview, these may throw if bridge is mocked without events
    }
    return () => { for (const u of unsubs) try { u(); } catch {} };
  }, []);

  const handleBrowseVideos = useCallback(async () => {
    setError(null);
    try {
      const files = await openVideoFiles();
      if (files && files.length) {
        setSession((prev) => ({ ...prev, videoPaths: files }));
        setStatus(`Selected ${files.length} video file(s).`);
      }
    } catch (err: unknown) {
      setStatus('');
      setError(err instanceof Error ? err.message : String(err));
    }
  }, []);

  const buildProjectSnapshot = useCallback((): ProjectSchema => ({
    version: '1.0',
    audio: session.audioPath ? { path: session.audioPath } : null,
    playhead: typeof session.playhead === 'number' ? session.playhead : 0,
    clips: (session.videoPaths ?? []).map((p, index) => ({ path: p, index })),
    output: session.projectSavePath ? { path: session.projectSavePath } : undefined,
    metadata: {},
  }), [session.audioPath, session.videoPaths, session.playhead, session.projectSavePath]);

  const handleSaveProjectAs = useCallback(async () => {
    setStatus('');
    setError(null);
    try {
      const chosen = await chooseProjectSavePath(session.projectSavePath);
      if (!chosen) return;
      setSession((prev) => ({ ...prev, projectSavePath: chosen }));
      const snapshot = buildProjectSnapshot();
      await exportSession({ targetPath: chosen, state: snapshot as unknown as SessionState });
      setLastSavedSnapshot(JSON.stringify(snapshot));
      await updateProjectDirty(false);
      setStatus(`Project saved: ${chosen}`);
    } catch (err: unknown) {
      setStatus('');
      setError(err instanceof Error ? err.message : String(err));
    }
  }, [session.projectSavePath, buildProjectSnapshot]);

  const handleSaveProject = useCallback(async () => {
    setStatus('');
    setError(null);
    try {
      let target = session.projectSavePath;
      if (!target) {
        target = await chooseProjectSavePath(undefined);
      }
      if (!target) return;
      setSession((prev) => ({ ...prev, projectSavePath: target! }));
      const snapshot = buildProjectSnapshot();
      await exportSession({ targetPath: target!, state: snapshot as unknown as SessionState });
      setLastSavedSnapshot(JSON.stringify(snapshot));
      await updateProjectDirty(false);
      setStatus(`Project saved: ${target}`);
    } catch (err: unknown) {
      setStatus('');
      setError(err instanceof Error ? err.message : String(err));
    }
  }, [session.projectSavePath, buildProjectSnapshot]);

  const handleLoadProject = useCallback(async () => {
    setStatus('');
    setError(null);
    try {
      const result = await openProject();
      if (!result) return;
      const { path: jsonPath, project } = result;
      const audioPath = project.audio?.path ?? undefined;
      const sortedClips = [...project.clips].sort((a, b) => (a.index ?? 0) - (b.index ?? 0));
      const videoPaths = sortedClips.map((c) => String(c.path));
      const playhead = typeof project.playhead === 'number' ? project.playhead : 0;
      setSession((prev) => ({
        ...prev,
        audioPath,
        videoPaths,
        playhead,
        projectSavePath: jsonPath,
      }));
      const snapshot = {
        version: '1.0',
        audio: audioPath ? { path: audioPath } : null,
        playhead,
        clips: videoPaths.map((p, index) => ({ path: p, index })),
        output: jsonPath ? { path: jsonPath } : undefined,
        metadata: {},
      } satisfies ProjectSchema;
      setLastSavedSnapshot(JSON.stringify(snapshot));
      await updateProjectDirty(false);
      setStatus(`Loaded project: ${jsonPath}`);
    } catch (err: unknown) {
      setStatus('');
      setError(err instanceof Error ? err.message : String(err));
    }
  }, []);

  // Dirty tracking and autoset last-saved snapshot after save/load statuses
  useEffect(() => {
    const snapshot = JSON.stringify({
      version: '1.0',
      audio: session.audioPath ? { path: session.audioPath } : null,
      playhead: typeof session.playhead === 'number' ? session.playhead : 0,
      clips: (session.videoPaths ?? []).map((p, index) => ({ path: p, index })),
      output: session.projectSavePath ? { path: session.projectSavePath } : undefined,
      metadata: {},
    });
    const isDirty = snapshot !== lastSavedSnapshot;
    updateProjectDirty(isDirty).catch(() => void 0);
    if (status.startsWith('Project saved:') || status.startsWith('Loaded project:')) {
      setLastSavedSnapshot(snapshot);
    }
  }, [session.audioPath, session.videoPaths, session.playhead, session.projectSavePath, lastSavedSnapshot, status]);

   catch (err: unknown) {
      setStatus('');
      setError(err instanceof Error ? err.message : String(err));
    }
  }, []);

  const handleStartRender = useCallback(async () => {
    setStatus('');
    setError(null);
    try {
      const path = session.projectSavePath;
      if (!path) {
        setError('Please save the project JSON first.');
        return;
      }
      setIsRendering(true);
      await startRender(path);
      setStatus('Render started...');
    } catch (err: unknown) {
      setStatus('');
      setError(err instanceof Error ? err.message : String(err));
      setIsRendering(false);
    }
  }, [session.projectSavePath]);

  const handleExport = useCallback(async () => {
    const targetPath = window.prompt('Enter the destination path for the exported session file');

    if (!targetPath) {
      return;
    }

    setStatus('Exporting...');
    setError(null);

    try {
      await exportSession({ targetPath, state: session });
      setStatus(`Session exported to ${targetPath}.`);
    } catch (err: unknown) {
      setStatus('');
      setError(err instanceof Error ? err.message : String(err));
    }
  }, [session]);

  return (
    <div style={{ padding: '2rem', fontFamily: 'sans-serif' }}>
      <h1>MuvidGen Session</h1>
      <section style={{ margin: '1rem 0' }}>
        <h2>Audio</h2>
        <div style={{ display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
          <button type="button" onClick={handleBrowseAudio}>Browse Audio</button>
          <span style={{ color: '#666' }}>{session.audioPath ?? 'No audio selected'}</span>
        </div>
        {session.audioPath && (
          <div style={{ marginTop: '0.75rem' }}>
            <Waveform
              srcPath={session.audioPath}
              playhead={session.playhead ?? 0}
              onPlayheadChange={(t) => setSession((prev) => ({ ...prev, playhead: t }))}
            />
          </div>
        )}
      </section>

      <section style={{ margin: '1rem 0' }}>
        <h2>Videos</h2>
        <div style={{ display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
          <button type="button" onClick={handleBrowseVideos}>Browse Videos</button>
          <span style={{ color: '#666' }}>{(session.videoPaths?.length ?? 0)} selected</span>
        </div>
        {(session.videoPaths?.length ?? 0) > 0 && (
          <div style={{ marginTop: '0.5rem' }}>
            <Storyboard
              paths={session.videoPaths ?? []}
              onChange={(next) => setSession((prev) => ({ ...prev, videoPaths: next }))}
            />
          </div>
        )}
      </section>

      <section style={{ margin: '1rem 0' }}>
        <h2>Project</h2>
        <div style={{ display: 'flex', gap: '0.5rem', alignItems: 'center' }}>
          <button type="button" onClick={handleLoadProject}>Load Project...</button>
          <button type="button" onClick={handleSaveProject}>Save Project</button>
          <button type="button" onClick={handleSaveProjectAs}>Save Project As...</button>
          <span style={{ color: '#666' }}>{session.projectSavePath ?? 'No project path selected'}</span>
        </div>
        <div style={{ marginTop: '0.5rem' }}>
          <button type="button" onClick={handleStartRender} disabled={!session.projectSavePath || isRendering}>Render</button>
          <button type="button" onClick={() => cancelRender()} disabled={!isRendering} style={{ marginLeft: '0.5rem' }}>Cancel</button>
          <button type="button" onClick={() => { setLogs([]); setRenderElapsedMs(0); setRenderTotalMs(0); }} style={{ marginLeft: '0.5rem' }}>Clear Logs</button>
          <span style={{ marginLeft: '0.75rem', color: '#666' }}>Elapsed: {Math.floor((renderElapsedMs/1000))}s</span>
          {renderTotalMs > 0 && (
            <span style={{ marginLeft: '0.75rem', color: '#666' }}>
              ETA: {Math.max(0, Math.floor((renderTotalMs - renderElapsedMs)/1000))}s
            </span>
          )}
        </div>
        {renderTotalMs > 0 && (
          <div style={{ marginTop: '0.5rem', height: 10, background: '#222', borderRadius: 4, overflow: 'hidden' }}>
            <div style={{ height: '100%', width: `${Math.min(100, Math.max(0, (renderElapsedMs/renderTotalMs)*100)).toFixed(1)}%`, background: '#3f51b5' }} />
          </div>
        )}
        <div style={{ marginTop: '0.5rem', padding: '8px', background: '#0b0b0b', border: '1px solid #333', borderRadius: 4, maxHeight: 200, overflow: 'auto', fontFamily: 'ui-monospace, SFMono-Regular, Menlo, Consolas, monospace', fontSize: 12 }}>
          {logs.length === 0 ? (
            <div style={{ color: '#777' }}>Render logs will appear here...</div>
          ) : (
            logs.map((l, i) => (<div key={i}>{l}</div>))
          )}
        </div>
      </section>
      <label htmlFor="session-notes">Session Notes</label>
      <textarea
        id="session-notes"
        style={{ display: 'block', width: '100%', minHeight: '200px', marginTop: '0.5rem' }}
        value={String((session as any).notes ?? '')}
        onChange={handleNotesChange}
      />
      <div style={{ marginTop: '1rem', display: 'flex', gap: '0.5rem' }}>
        <button type="button" onClick={handleSave}>
          Save Session
        </button>
        <button type="button" onClick={handleExport}>
          Export Session
        </button>
      </div>
      {status && <p style={{ color: 'green' }}>{status}</p>}
      {error && (
        <p role="alert" style={{ color: 'red' }}>
          {error}
        </p>
      )}
    </div>
  );
};

export default App;



